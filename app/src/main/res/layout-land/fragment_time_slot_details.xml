<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context=".ui.timeslot_details.TimeSlotDetailsFragment">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/time_slot_title"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/timeslot_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                style="@style/ItemLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timeslot_date" />

            <TextView
                android:id="@+id/email"
                style="@style/Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timeslot_date" />

            <TextView
                style="@style/ItemLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timeslot_time" />

            <TextView
                android:id="@+id/time_slot_time"
                style="@style/Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timeslot_time" />

            <TextView
                style="@style/ItemLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timeslot_duration" />

            <TextView
                android:id="@+id/balance"
                style="@style/Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timeslot_duration" />

            <TextView
                style="@style/ItemLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timeslot_location" />

            <TextView
                android:id="@+id/description"
                style="@style/Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timeslot_location" />

            <TextView
                style="@style/ItemLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timeslot_description" />

            <TextView
                android:id="@+id/nickname"
                style="@style/Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timeslot_description" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

