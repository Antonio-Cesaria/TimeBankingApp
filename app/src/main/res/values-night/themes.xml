<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimeBankingApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">#E6FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/light_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
        <item name="android:textColor">@color/dark_white</item>

        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">#212121</item>

        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#1C1C1C</item>
        <item name="colorOnSurface">#FFFFFF</item>
    </style>

    <style name="Theme.TimeBankingApp.headerNavBar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">#636363</item>
    </style>

    <!-- Navigation drawer only theme. -->
    <style name="Theme.TimeBankingApp.navBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#FFFFFF</item>
    </style>

</resources>